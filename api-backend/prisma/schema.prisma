generator client {
  provider   = "prisma-client-js"
  engineType = "library"
}

datasource db {
  provider = "postgresql"
}

// Definimos el Enum para los roles
enum Role {
  ADMIN
  MANAGER
  USER
}

model User {
  id            Int      @id @default(autoincrement())
  email         String   @unique
  username      String   @unique
  password      String   // El toque de seguridad que faltaba
  role          Role     @default(USER)
  creation_date DateTime @default(now())
  last_login    DateTime @updatedAt
}