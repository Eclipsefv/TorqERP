@inherits LayoutComponentBase
@using TorqERP.Services
@inject TorqThemeService ThemeService
@inject AuthService AuthService
@inject ApiService ApiService
@inject NavigationManager NavManager

<MudThemeProvider IsDarkMode="true" Theme="ThemeService.Theme" />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<style>
    .mud-layout {
        background-color: #1a1a27 !important;
    }

    .mud-main-content {
        background-color: #1a1a27 !important;
        min-height: 100vh;
        padding-top: 80px !important;
    }

    .mud-container {
        background-color: #1a1a27 !important;
    }
</style>

<MudLayout>
    <MudAppBar Color="Color.Primary" Fixed="true" Elevation="1">
        <MudText Typo="Typo.h6" Class="ml-3">TorqERP</MudText>

        <MudSpacer />

        @*test button*@
        <AuthorizeView Roles="ADMIN">
            <MudTooltip Text="Testing product api">
                <MudIconButton Icon="@Icons.Material.Filled.BugReport"
                               Color="Color.Inherit"
                               OnClick="HandleTestApi" />
            </MudTooltip>
        </AuthorizeView>

        <MudTooltip Text="Logout">
            <MudIconButton Icon="@Icons.Material.Filled.Logout"
                           Color="Color.Inherit"
                           OnClick="HandleLogout" />
        </MudTooltip>
    </MudAppBar>

    <MudDrawer Open="true" ClipMode="DrawerClipMode.Always" Elevation="2" Variant="@DrawerVariant.Responsive">
        <NavMenu />
    </MudDrawer>

    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="pa-6">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    private async Task HandleLogout()
    {
        await AuthService.Logout();
        NavManager.NavigateTo("/login");
    }

    private async Task HandleTestApi()
    {
        await ApiService.TestProductsLogAsync();
    }
}